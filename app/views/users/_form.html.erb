<%= form_for @user do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :username, required: true %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.email_field :email, required: true %>
	</p>
	<% if @user.new_record? %>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password, required: true %>
		</p>
	<% end %>
	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :bio %><br>
		<%= f.text_area :bio %>
	</p>
	<p>
		<%= f.submit(@user.new_record? ? "sign up" : "edit account") %>
	</p>
<% end %>